{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "KnownBase: Debug",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "debug",
            "console": "debugConsole"
        },
        {
            "name": "KnownBase: Profile",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "profile",
            "console": "debugConsole"
        },
        {
            "name": "KnownBase: Release",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "release",
            "console": "debugConsole"
        },
        {
            "name": "KnownBase: Debug (macOS)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "debug",
            "deviceId": "macos",
            "console": "debugConsole"
        },
        {
            "name": "KnownBase: Debug (iOS Simulator)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "debug",
            "deviceId": "ios",
            "console": "debugConsole"
        },
        {
            "name": "KnownBase: Debug (Android Emulator)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "debug",
            "deviceId": "android",
            "console": "debugConsole"
        },
        {
            "name": "KnownBase: Debug (Chrome)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "debug",
            "deviceId": "chrome",
            "console": "debugConsole"
        },
        {
            "name": "KnownBase: Debug with Hot Reload",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "debug",
            "console": "debugConsole",
            "args": [
                "--hot"
            ]
        },
        {
            "name": "KnownBase: Debug Authentication Flow",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "debug",
            "console": "debugConsole",
            "env": {
                "FLUTTER_DEBUG_AUTH": "true",
                "SUPABASE_DEBUG": "true"
            }
        },
        {
            "name": "KnownBase: Debug with Network Logging",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "debug",
            "console": "debugConsole",
            "args": [
                "--verbose"
            ],
            "env": {
                "FLUTTER_NETWORK_DEBUG": "true"
            }
        },
        {
            "name": "KnownBase: Test All",
            "request": "launch",
            "type": "dart",
            "program": "test/",
            "args": [
                "--coverage",
                "--reporter=expanded"
            ],
            "console": "debugConsole"
        },
        {
            "name": "KnownBase: Test Current File",
            "request": "launch",
            "type": "dart",
            "program": "${file}",
            "console": "debugConsole"
        },
        {
            "name": "KnownBase: Integration Tests",
            "request": "launch", 
            "type": "dart",
            "program": "integration_test/app_test.dart",
            "args": [
                "-d",
                "macos"
            ],
            "console": "debugConsole"
        }
    ],
    "compounds": [
        {
            "name": "KnownBase: Launch Multiple Platforms",
            "configurations": [
                "KnownBase: Debug (macOS)",
                "KnownBase: Debug (Chrome)"
            ],
            "stopAll": true
        }
    ]
}